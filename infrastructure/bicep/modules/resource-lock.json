{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.38.33.27573",
      "templateHash": "15257366044932778446"
    }
  },
  "parameters": {
    "environment": {
      "type": "string",
      "allowedValues": [
        "dev",
        "staging",
        "production"
      ],
      "metadata": {
        "description": "Environment name (dev, staging, production)"
      }
    },
    "targetResourceName": {
      "type": "string",
      "metadata": {
        "description": "Target resource name (for lock naming)"
      }
    },
    "lockNotes": {
      "type": "string",
      "defaultValue": "Critical production resource - prevent accidental deletion",
      "metadata": {
        "description": "Lock notes explaining why resource is locked"
      }
    }
  },
  "variables": {
    "shouldApplyLock": "[equals(parameters('environment'), 'production')]"
  },
  "resources": [
    {
      "condition": "[variables('shouldApplyLock')]",
      "type": "Microsoft.Authorization/locks",
      "apiVersion": "2020-05-01",
      "name": "[format('{0}-lock', parameters('targetResourceName'))]",
      "properties": {
        "level": "CanNotDelete",
        "notes": "[parameters('lockNotes')]"
      }
    }
  ],
  "outputs": {
    "lockApplied": {
      "type": "bool",
      "metadata": {
        "description": "Whether lock was applied"
      },
      "value": "[variables('shouldApplyLock')]"
    },
    "lockName": {
      "type": "string",
      "metadata": {
        "description": "Lock name if applied"
      },
      "value": "[if(variables('shouldApplyLock'), format('{0}-lock', parameters('targetResourceName')), '')]"
    }
  }
}